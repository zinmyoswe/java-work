package java_useful;
import java.io.File;

public class java_file {
	public static void main(String[] args) {
		File myObj = new File("D:\\Tutorial2\\file1.txt");
		if(myObj.exists()) {
			System.out.println("File name :"+ myObj.getName());
			System.out.println("Absolute path :"+ myObj.getName());
			System.out.println("Writeable :"+ myObj.getName());
			System.out.println("Readable :"+ myObj.getName());
			System.out.println("File size in bytes :"+ myObj.getName());
		}
		else {
			System.out.println("The file does not exist");
		}
	}
}
